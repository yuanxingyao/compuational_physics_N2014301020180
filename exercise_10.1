import math
import pylab as pl
class planetary:
    def __init__(self,v_y,beta ): 
        self.dt = 0.002
        self.t = [0]
        self.x = [1]
        self.y = [0]
        self.v_x = [0]
        self.v_y = [v_y]
        self.r = [1]
        self.beta = beta
    def calculate(self):
        while (self.t[-1]<=50):
            self.r[-1] = math.sqrt(self.x[-1]**2 + self.y[-1]**2)
            self.v_x.append(self.v_x[-1] - \
            4*(math.pi)**2*self.x[-1]*self.dt/((self.r[-1])**(self.beta + 1)))
            self.v_y.append(self.v_y[-1] - \
            4*(math.pi)**2*self.y[-1]*self.dt/((self.r[-1])**(self.beta + 1)))
            self.x.append(self.x[-1] + self.v_x[-1]*self.dt)
            self.y.append(self.y[-1] + self.v_y[-1]*self.dt)
            self.t.append(self.t[-1] + self.dt)
    def show_results(self):
        font = {'family': 'serif',
                'color':  'darkred',
                'weight': 'normal',
                'size': 16,
                }
        pl.plot(self.x, self.y)
        pl.xlabel('x(AU)')
        pl.ylabel('y(AU)')
        pl.scatter([0],[0],s=100,color='red')
        pl.title('Vy = 2.5 $\pi$')
        pl.text(self.x[600], self.y[600],'beta='+str(self.beta), fontdict = font) 
        pl.show
a = planetary(2.5*math.pi,2)
a.calculate()
a.show_results()
